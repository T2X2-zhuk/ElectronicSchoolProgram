<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="1" author="Tarasov">
        <createTable tableName="classes">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="number" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Tarasov">
        <createTable tableName="school_students">
            <column autoIncrement="true" name="id" type="BIGINT">
            <constraints primaryKey="true" />
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="fatherland" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="classes_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Tarasov" id="3">
        <createIndex indexName="ix_email"
                     tableName="school_students"
                     unique="true">
            <column name="email"/>
        </createIndex>

        <createIndex indexName="ix_password"
                     tableName="school_students"
                     unique="true">
            <column name="password"/>
        </createIndex>
    </changeSet>

    <changeSet author="Tarasov" id="4">
        <addForeignKeyConstraint baseTableName="school_students"
                                 baseColumnNames="classes_id"
                                 constraintName="fk_school_students_classes_id"
                                 referencedTableName="classes"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>