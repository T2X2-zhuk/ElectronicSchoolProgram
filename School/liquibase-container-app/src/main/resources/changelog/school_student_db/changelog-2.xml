    <changeSet id="5" author="Tarasov">
        <createTable tableName="specific_code_for_registration_in_school">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="specific_code_for_registration_for_student" type="VARCHAR(200)">
