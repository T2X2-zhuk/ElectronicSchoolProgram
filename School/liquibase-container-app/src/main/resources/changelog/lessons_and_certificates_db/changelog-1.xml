<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="1" author="Tarasov">
        <createTable tableName="lessons">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Tarasov">
        <createTable tableName="class_lessons">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="school_class_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="lesson_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_class_lessons_lesson"
                             referencedTableName="lessons"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="class_lessons"
                columnNames="school_class_id, lesson_id"
                constraintName="uk_class_lesson"/>
    </changeSet>

    <changeSet id="3" author="Tarasov">
        <createTable tableName="certificates">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="student_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_certificates_student"
                             referencedTableName="students"
                             referencedColumnNames="id"/>
            </column>
            <column name="class_lessons_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_certificates_lesson"
                             referencedTableName="class_lessons"
                             referencedColumnNames="id"/>
            </column>
            <column name="first_trimester" type="BIGINT"/>
            <column name="two_trimester" type="BIGINT"/>
            <column name="three_trimester" type="BIGINT"/>
            <column name="annual_subject_assessment" type="BIGINT"/>
        </createTable>

        <addUniqueConstraint
                tableName="certificates"
                columnNames="student_id, class_lessons_id"
                constraintName="uk_student_class_lessons_id"/>
    </changeSet>

</databaseChangeLog>